{
  "compilerOptions": {
    "alwaysStrict": true,
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2015"
    ],
    "jsxFactory": "h",
    "noEmitHelpers": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ]
}
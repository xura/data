{
  "name": "ts-preact-starter",
  "version": "1.0.0",
  "description": "Barebones starter project for Preact with TypeScript",
  "main": "index.js",
  "author": "Nick Taylor <nick@iamdeveloper.com>",
  "license": "MIT",
  "keywords": [
    "preact",
    "react",
    "typescript",
    "boilerplate"
  ],
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "kill": "lsof -ti :8230-9000 | xargs kill -9",
    "start": "yarn kill && concurrently --kill-others --kill-others-on-fail -p name --names \"data,components\" \"yarn start:solo\" \"npm run start --prefix ../../components\"",
    "start:solo": "webpack-dev-server --mode=development --progress --config ./webpack.config.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
  },
  "devDependencies": {
    "@babel/core": "7.7.2",
    "@types/webpack": "4.41.0",
    "@types/webpack-dev-server": "3.1.7",
    "babel-loader": "8.0.6",
    "concurrently": "^5.0.2",
    "html-webpack-plugin": "3.2.0",
    "ts-loader": "6.2.1",
    "ts-node": "8.5.4",
    "typescript": "3.7.4",
    "webpack": "4.41.4",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "3.8.0",
    "@xura/components": "git+https://git@github.com/xura/components"
  },
  "dependencies": {
    "preact": "8.5.2",
    "tslib": "1.10.0"
  }
}